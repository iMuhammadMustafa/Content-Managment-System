<h1>Comments</h1>

<div class="table-container">
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Post Id</th>
        <th>Rating</th>
        <th>CreatedAt</th>
        <th>UpdatedAt</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% comments.forEach((comment) => { %>
      <tr>
        <td>
          <a href=""><%= comment._id %></a>
        </td>
        <td>
          <a href=""><%= comment.postId %></a>
        </td>
        <td><%= comment.rating %></td>
        <td>
          <%= comment.createdAt.toLocaleDateString('en-GB') %> <%= comment.createdAt.toLocaleTimeString('en-GB', { hour:
          '2-digit', minute: '2-digit',  }) %>
        </td>
        <td>
          <%= comment.updatedAt.toLocaleDateString('en-GB') %> <%= comment.updatedAt.toLocaleTimeString('en-GB', { hour:
          '2-digit', minute: '2-digit' }) %>
        </td>
        <td>
          <a href="/profile/comments/edit/<%= comment._id %>" title="Edit">
            <i class="fa-regular fa-pen-to-square"></i>
          </a>
          <a href="/profile/comments/delete/<%= comment._id %>" title="Delete">
            <i class="fa-solid fa-trash-can"></i>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
