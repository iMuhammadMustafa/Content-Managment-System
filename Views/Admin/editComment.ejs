<h1>Edit Comment</h1>

<div class="form-wrapper">
  <form action="/profile/comments/edit" method="POST">
    <input type="hidden" name="_id" value="<%= comment._id %>" />
    <div class="form-input">
      <label for="postId">Post Id</label>
      <input type="text" id="postId" name="postId" value="<%= comment.postId %>" disabled />
    </div>
    <div class="form-input">
      <label for="content">Content</label>
      <textarea id="content" name="content" rows="4" cols="50"><%= comment.content %></textarea>
    </div>
    <div class="form-input">
      <label for="userId">Author Id</label>
      <input type="text" id="userId" name="userId" value="<%= comment.userId %>" disabled />
    </div>

    <div class="form-input">
      <label for="rating">Rating</label>
      <input type="number" id="rating" name="rating" value="<%= comment.rating %>" disabled />
    </div>
    <div class="form-input">
      <input type="submit" value="Save" />
      <a id="back" href="/profile/comments">Back</a>
    </div>
  </form>
</div>
